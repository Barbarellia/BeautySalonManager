@page "{id:int?}"
@model BeautySalonManager.Pages.Treatments.IndexModel

@{
    ViewData["Title"] = "Treatments";
}

<h2>Treatments</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Duration</th>
            <th>Price</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Treatment.Treatments) {
            string selectedRow = "";
            if (item.Id == Model.TreatmentID)
            {
                selectedRow = "success";
            }
        <tr class="@selectedRow">
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duration)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @{
                    foreach (var emp in item.TreatmentAssignments)
                    {
                        @emp.Employee.Id @:  @emp.Employee.User.LastName<br />
                    }
                }
            </td>
            <td>
                <a asp-page="./Index" asp-route-id="@item.Id">Select</a> |
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
