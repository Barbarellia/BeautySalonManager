@page "{id:int?}/{employeeId:int?}/{month?}/{day?}"
@model BeautySalonManager.Pages.Treatments.IndexModel

@{
    ViewData["Title"] = "Treatments";
}

<h2>Treatments</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Duration</th>
            <th>Price</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Treatment.Treatments)
        {
            string selectedRow = "";
            if (item.Id == Model.TreatmentID)
            {
                selectedRow = "success";
            }
            <tr class="@selectedRow">
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Duration)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                @*<td>
                        @{
                            foreach (var emp in item.TreatmentAssignments)
                            {
                                @emp.Employee.Id @:  @emp.Employee.User.LastName<br />
                            }
                        }
                    </td>*@
                <td>
                    <a asp-page="./Index" asp-route-id="@item.Id">Select</a> |
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@if (Model.Treatment.Employees != null)
{
    <h3>Employees assigned to selected treatment</h3>
    <table class="table">
        <tr>
            <th></th>
            <th>Last name</th>
            <th>First name</th>
            <th>Email</th>
        </tr>

        @foreach (var item in Model.Treatment.Employees)
        {
            string selectedRow = "";
            if (item.Id == Model.EmployeeID)
            {
                selectedRow = "success";
            }
            <tr class="@selectedRow">
                <td>
                    <a asp-page="./Index" asp-route-employeeId="@item.Id">Select</a>
                </td>
                <td>
                    @item.User.LastName
                </td>
                <td>
                    @item.User.FirstName
                </td>
                <td>
                    @item.User.Email
                </td>
            </tr>
        }
    </table>

    @if (Model.MonthsNavigation != null)
    {
        <h3>Available hours for this employee</h3>
        <hr />
        <div class="row">
            <div class="col-md-4">
                @foreach (var item in Model.MonthsNavigation)
                {
                    string selectedMonth = "default";
                    if (item.Item2 == Model.SelectedMonth)
                    {
                        selectedMonth = "success";
                    }
                    <a class="btn btn-@selectedMonth" asp-page="./Index" asp-route-month="@item.Item2">@item.Item2</a>
                }
                @if (Model.SelectedMonthDaysNumber > 0)
                {
                    for (int i = 0; i < Model.SelectedMonthDaysNumber; i++)
                    {
                        string selectedDay = "default";
                        if (i + 1 == Model.SelectedDay)
                        {
                            selectedDay = "success";
                        }
                        if (i % 7 == 0)
                        {
                            @:<br />
                        }
                        <a class="btn btn-@selectedDay" style="width:40px" asp-page="./Index" asp-route-day="@(i + 1)">@(i + 1)</a>
                    }
                }
            </div>
            <div class="col-md-1">
                @if (Model.Enrollments != null)
                {
                    <div class="list-group">
                        @foreach (var item in Model.FreePeriods)
                        {
                            <a class="list-group-item" asp-page="./ConfirmEnrollment" 
                               asp-route-date="@item" 
                               asp-route-treatmentAssignmentId="@Model.TreatmentAssignmentId" 
                               asp-route-userId="@Model.UserId">@item.ToString("HH:mm")</a>
                        }
                    </div>
                }
            </div>
        </div>
    }
    //----------------------EDIT----------------------------

    @*@if (Model.Enrollments != null)
        {
            <partial name="_FreePeriods" model="Model.Enrollments" />
        }*@
}
