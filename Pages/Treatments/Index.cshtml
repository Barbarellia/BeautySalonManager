@page "{id:int?}/{employeeId:int?}/{month?}/{day?}"
@model BeautySalonManager.Pages.Treatments.IndexModel

@{
    ViewData["Title"] = "Treatments";
}

<h2>Treatments</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Duration</th>
            <th>Price</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Treatment.Treatments)
        {
            string selectedRow = "";
            if (item.Id == Model.TreatmentID)
            {
                selectedRow = "success";
            }
            <tr class="@selectedRow">
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Duration)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                @*<td>
                        @{
                            foreach (var emp in item.TreatmentAssignments)
                            {
                                @emp.Employee.Id @:  @emp.Employee.User.LastName<br />
                            }
                        }
                    </td>*@
                <td>
                    <a asp-page="./Index" asp-route-id="@item.Id">Select</a> |
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@if (Model.Treatment.Employees != null)
{
    <h3>Employees assigned to selected treatment</h3>
    <table class="table">
        <tr>
            <th></th>
            <th>Last name</th>
            <th>First name</th>
            <th>Email</th>
        </tr>

        @foreach (var item in Model.Treatment.Employees)
        {
            string selectedRow = "";
            if (item.Id == Model.EmployeeID)
            {
                selectedRow = "success";
            }
            <tr class="@selectedRow">
                <td>
                    <a asp-page="./Index" asp-route-employeeId="@item.Id">Select</a>
                </td>
                <td>
                    @item.User.LastName
                </td>
                <td>
                    @item.User.FirstName
                </td>
                <td>
                    @item.User.Email
                </td>
            </tr>
        }

    </table>

    //----------------------EDIT----------------------------
    <div class="row">
        <div class="col-md-6">
            @if (Model.MonthsNavigation != null)
            {
                foreach (var item in Model.MonthsNavigation)
                {
                    <a class="btn btn-default" asp-page="./Index" asp-route-month="@item.Item2">@item.Item2</a>
                }
                if (Model.SelectedMonthDaysNumber > 0)
                {
                    for (int i = 0; i < Model.SelectedMonthDaysNumber; i++)
                    {
                        if (i % 7 == 0)
                        {
                            @:<br />
                        }
                        <a class="btn btn-default" style="width:40px" asp-page="./Index" asp-route-day="@(i+1)">@(i + 1)</a>
                    }
                }
            }
        </div>
        <div class="col-md-6">
            @if (Model.Enrollments != null)
            {
                <ul>
                    @foreach (var item in Model.Enrollments)
                    {
                        <li>@item.Date</li>
                    }
                </ul>
            }
        </div>
    </div>
    //----------------------EDIT----------------------------

    @*@if (Model.Enrollments != null)
    {
        <partial name="_FreePeriods" model="Model.Enrollments" />
    }*@
}
